<div class="screen-reader-response"></div>
    <!-- <form @submit.prevent="show" class="calculator-form" action="show" name="show" method="POST">  -->
    <form @submit.prevent="calculateAction" class="wpcf7-form" action="#" name="calc" method="POST">
    <div class="form-box" style="padding-top: 50px;">

        <button type="submit" class="btn btn-primary" id="show_fuck" @click="calculateCredit">Show_fuck</button>

        <button @click="backToStartStep()" type="button" class="btn btn-primary" id="backToStart">Назад</button>
        <button @click="backStep()" type="button" class="btn btn-primary" id="back">Назад</button>
        <div class="first" style="padding: 50px 0 50px 0">
            <div class="form-row">
                <span>{{ lang.type_of_technic }}*</span>
                <span class="wpcf7-form-control-wrap manufacturer">
                    <v-select :options="typeOfEquipmentList" label="name" v-model="selected">
                        <template slot="option" slot-scope="option">
                            <span class="fa"></span>
                        </template>
                </span>
                </v-select>
            </div>
            <div class="form-row">
                <span>{{ lang.manufacturer }}*</span>
                <span class="wpcf7-form-control">
                    <v-select :options="manufacturersList" label="name" v-model="selected1"  >
                        <template slot="option1" slot-scope="option1">
                            <span class="fa"></span>
                        </template>
                    </v-select>
                </span>
            </div>
            <div class="form-row">
                <span>{{ lang.model }}*</span>
                <span class="wpcf7-form-control">
                    <v-select :options="modelList" label="name" v-model="selected2">
                        <template slot="option2" slot-scope="option2" >
                            <span class="fa"></span>
                        </template>
                    </v-select>
                </span>
            </div>
        </div>
        <div class="second" style="display: none; padding: 50px 0 50px 0">
            <div class="form-row">
                <span>{{ lang.email_faq_text }}</span>
                <span class="wpcf7-form-control-wrap your-email">
                    <input type="email" name="your-email" value="" size="40" maxlength="200" autocomplete="email"
                        class="wpcf7-form-control wpcf7-text wpcf7-email wpcf7-validates-as-email form-input"
                        aria-invalid="false" />
                </span>
            </div>

            <div class="form-row">
                <span>{{ lang.tech_name_text }}*</span>
                <span class="wpcf7-form-control-wrap pledge">
                    <input type="text" name="pledge" size="40" maxlength="200"
                        class="wpcf7-form-control wpcf7-text form-input is-required" aria-invalid="false" value="" />
                </span>
            </div>
        </div>
        <div class="final" style="display: none; padding: 50px 0 50px 0 ">
            <div class="form-row">
                <span>тест*</span>
                <span class="calc1">
                    <input type="text" name="calc1" size="40" maxlength="200"
                        class="wpcf7-form-control wpcf7-text form-input is-required" aria-invalid="false"
                        v-bind:value="counter" />
                    <h1>{{counter}}</h1>
                </span>
            </div>
        </div>
        <button @click="nextStep()" type="button" class="btn btn-primary">дальше</button>
    </div>

    <div class="calculator__items">
        <div class="graphics disabled" data-js-calculatorgraphics>
            <div class="graphics__container">
                <div class="graphics__graph">
                    <div class="graphics__column">
                        <div class="graphics__item sum"></div>
                    </div>
                    <div class="graphics__info">
                        <div class="graphics__name">{{ lang.credit_sum_text }}</div>
                        <div class="graphics__value">${sum}</div>
                    </div>
                </div>
                <div class="graphics__graph">
                    <div class="graphics__column percent">
                        <div class="graphics__item percent" :style="{height: setPercent + '%'}"></div>
                    </div>
                    <div class="graphics__info">
                        <div class="graphics__name">{{ lang.percent_credit_sum_text }}</div>
                        <div class="graphics__value">${percent}</div>
                    </div>
                </div>
            </div>
            <div class="graphics__notes">
                {{ lang.calculator_info_text }}
            </div>
            <button class="graphics__button button60" data-options='{"baseClass":"not100height"}' data-fancybox
                data-src="#order-popup-3" :disabled="!chosenField.orderBtn"></button>
        </div>
        {# ==========POPUP FORM============= #}

    </div>

    <div class="form-box is-dropzone" style="display: none">
        <div id="js-dropzone" class="dropzone">
            <div class="fallback">
                <span class="wpcf7-form-control-wrap photo">
                    <input type="file" name="photo" size="40" class="wpcf7-form-control wpcf7-file"
                        aria-invalid="false" />
                </span>
            </div>
            <p>
                <a href="#" class="btn has-border">{{ lang.tech_photo_text }}</a>
            </p>
        </div>
    </div>
    {# не убирать класс wpcf7-checkbox #}
    <div class="subscribe wpcf7-checkbox">
        <label>
            <input data-js="subscribe-checkbox" name="subscribe" type="checkbox"
                title="{{ lang.subscribe_text }}"><b></b>
            <span>{{ lang.subscribe_text }}</span>
        </label>
    </div>
    <div class="form-actions">
        <input type="submit" value="{{ lang.tech_send_text }}"
            class="wpcf7-form-control wpcf7-submit btn js-send-form" />
    </div>
    <div class="wpcf7-response-output wpcf7-display-none"></div>
</form>
{# </div> #}