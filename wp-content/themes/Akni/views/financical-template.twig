{% extends '_layout.twig' %}

{% block advanced_meta %}
    <meta name="description" content="{{ meta_description }}"/>
{% endblock %}

{% block content %}
    <div class="text-page">
        <h1 id="title" class="text-page__title content-width">{{ page.post_title }}</h1>
        {% if page.post_content %}
            <section class="text-page__content content-width">
                {{ page.post_content }}
                {% if page.acf.reports.value is not empty %}
                    {% for report in page.acf.reports.value %}
                        {% if report.document_name !='' and report.document_file !='' %}
                            <div>
                                <a target="_blank" href ="{{ report.document_file }}">{{ report.document_name }}</a>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </section>
        {% endif %}
        {% include 'modules/_page_blocks.twig' %}
    </div>
{% endblock %}